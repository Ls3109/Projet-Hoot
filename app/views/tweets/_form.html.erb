<div class="jumbotron">
 
          <% if current_user.avatar.present? %>
          <%= image_tag(current_user.avatar.variant(resize_to_fill: [100, 100]), class: "rounded-circle") %>
          <% else %>
          <img alt="image" class="rounded-circle" src="/assets/default_avatar_small.jpg">
          <% end %>
          <br/>  <br/>
           <h1 class="display-4"> New tweet</h1>
  <%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>
 
      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <p> <p> A penny for your thoughts ? </p>
  
    <% form.label :body%>
    
    <%= form.text_area :body, :id => 'body' %>
  </p>
 
  <div class="actions">
    <%= form.submit "Tweet it !", class:"btn btn-secondary" %>
  </div>
<% end %>
</div>

